{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="font sans">
        <form action="{{ path('app_login') }}" method="post" class="flex justify-center pt-36">
            <label for="username" class="m-5">Email:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" class="m-5 border hover:border-pink-700"/>

            <label for="password" class="m-5">Password:</label>
            <input type="password" id="password" name="_password" class="m-5 border hover:border-pink-700"/>

            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account"/> #}

            <button type="submit" class="text-pink-700">Login</button>
        </form>
    </div>
{% endblock %}
